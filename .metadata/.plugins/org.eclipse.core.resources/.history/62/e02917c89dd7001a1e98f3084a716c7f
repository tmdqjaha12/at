		//ajax 댓글
		function ArticleReply__submitWriteForm(form) {
			form.body.value = form.body.value.trim();
			if (form.body.value.length == 0) {
				alert('댓글을 입력해주세요.');
				form.body.focus();
				return;
			}
			$.post('./doWriteReplyAjax', {
				articleId : form.id.value,
				body : form.body.value
			}, function(data) {


				  
			}, 'json');
			form.body.value = '';
		}
</script>
